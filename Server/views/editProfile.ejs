<script>
  function showHideShipInfo() {
    if(document.getElementById('sameAddress').checked) {
        document.getElementById('remove').style.display='none';
    } 
    else {
      let w = document.forms["myForm"]["bill_street1"].value;
      let x = document.forms["myForm"]["bill_city"].value;
      let y = document.forms["myForm"]["bill_state"].value;
      let z = document.forms["myForm"]["bill_zip"].value;
      
      document.getElementById('remove').style.display='block';

      if(w == ""){
        alert("Billing address 1 must be filled out");
        return false;
      }
      else if(x == ""){
        alert("Billing city must be filled out");
        return false;
      }
      else if(y == ""){
        alert("Billing state must be filled out");
        return false;
      }
      else if(z == ""){
        alert("Billing zip code must be filled out");
        return false;
      }
    }
  }
